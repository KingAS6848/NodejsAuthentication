<link rel="stylesheet" href="/css/user_signin.css">

<div class="signin_container" >
    <h1 class="signin-heading">Sign In</h1>
    <form class="signin-form" action="/users/create-session" method="post">
      <div class="input-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="input-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
      </div>
      <button type="submit" class="submit-btn">Sign In</button>
    </form>
    <div class="google-login">
      <p>Or sign in with:</p>
      <form action="/users/auth/google">
      <button class="google-btn" type="submit">Google</button>
    </form>
    </div>
    <a href="/users/forgot">Forgot your password</a>
