<link rel="stylesheet" href="/css/new_pass.css">
<div class="forgot-container">
    <div class="forgot-logo">
      <img src="/public/logo.png" alt="Logo">
    </div>
    <form action="/users/change-password" method="post">
     
      <div class="forgot-form-group">
        <label for="Email">Email</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="forgot-form-group">
        <label for="forgot-otp">OTP</label>
        <input type="text" id="forgot-otp" name="code" required>
      </div>
      <div class="forgot-form-group">
        <label for="forgot-new-password">New Password</label>
        <input type="password" id="forgot-new-password" name="password" required>
      </div>
      <div class="forgot-form-group">
        <label for="forgot-confirm-password">Confirm Password</label>
        <input type="password" id="forgot-confirm-password" name="confirm_password" required>
      </div>
      <button type="submit" class="forgot-submit-btn">Reset Password</button>
    </form>
  </div>